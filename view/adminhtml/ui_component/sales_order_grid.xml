<?xml version="1.0" encoding="UTF-8"?>
<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">

    <!-- **************************************************** -->
    <!-- Additional Columns for Grid                          -->
    <!-- **************************************************** -->
    <columns name="sales_order_columns">

        <column name="prxgt_pv_total_sale_grid">
            <settings>
                <dataType>number</dataType>
                <filter>textRange</filter>
                <label translate="true">PV Total</label>
            </settings>
        </column>

        <column name="prxgt_pv_discount_sale_grid">
            <settings>
                <dataType>number</dataType>
                <filter>textRange</filter>
                <label translate="true">PV Discount</label>
            </settings>
        </column>

        <column name="prxgt_pv_subtotal_sale_grid">
            <settings>
                <dataType>number</dataType>
                <filter>textRange</filter>
                <label translate="true">PV Subtotal</label>
            </settings>
        </column>

    </columns>
</listing>

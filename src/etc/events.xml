<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Event/etc/events.xsd">


    <event name="checkout_submit_all_after">
        <!-- Registry PV for sale orders and collect PV on customer account if order is paid. -->
        <observer name="prxgt_pv_observer" instance="Praxigento\Pv\Observer\CheckoutSubmitAllAfter"/>
    </event>
    <event name="sales_order_invoice_pay">
        <!-- Collect PV on customer account when order is paid by check or transfer. -->
        <observer name="prxgt_pv_observer" instance="Praxigento\Pv\Observer\SalesOrderInvoicePay"/>
    </event>

</config>
<?xml version="1.0" encoding="UTF-8"?><!--
/**
 * Additional columns for sale orders grid.
 */
-->
<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <columns name="sales_order_columns">
        <column name="prxgt_pv_total">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="filter" xsi:type="string">number</item>
                    <item name="label" xsi:type="string" translate="true">PV Total</item>
                </item>
            </argument>
        </column>
        <column name="prxgt_pv_discount">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="filter" xsi:type="string">number</item>
                    <item name="label" xsi:type="string" translate="true">PV Discount</item>
                </item>
            </argument>
        </column>
        <column name="prxgt_pv_subtotal">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="filter" xsi:type="string">number</item>
                    <item name="label" xsi:type="string" translate="true">PV Subtotal</item>
                </item>
            </argument>
        </column>
    </columns>
</listing>

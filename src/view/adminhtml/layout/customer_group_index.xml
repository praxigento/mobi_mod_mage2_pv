<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="adminhtml.customer.group.grid.columnSet">
            <block class="Magento\Backend\Block\Widget\Grid\Column"
                   name="adminhtml.catalog.product.set.grid.column.prxgtCanSeePv"
                   as="prxgt_can_see_pv">
                <arguments>
                    <argument name="header" xsi:type="string" translate="true">Can See PV</argument>
                    <!-- see ./etc/extension_attributes.xml -->
                    <argument name="index" xsi:type="string">prxgt_can_see_pv</argument>
                    <argument name="default" xsi:type="string"></argument>
                    <argument name="type" xsi:type="string">options</argument>
                    <argument name="options" xsi:type="array">
                        <item name="no" xsi:type="array">
                            <item name="value" xsi:type="string">0</item>
                            <item name="label" xsi:type="string" translate="true">No</item>
                        </item>
                        <item name="yes" xsi:type="array">
                            <item name="value" xsi:type="string">1</item>
                            <item name="label" xsi:type="string" translate="true">Yes</item>
                        </item>
                    </argument>
                </arguments>
            </block>
        </referenceBlock>
    </body>
</page>
